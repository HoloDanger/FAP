<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>test.LoginServlet</servlet-class>
        <init-param>
            <param-name>DB_username</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>DB_password</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>DB_driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>DB_url</param-name>
            <param-value>jdbc:derby://localhost:1527/UserDB</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>test.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>test.CourseServlet</servlet-class>
        <init-param>
            <param-name>jdbcUsername</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcPassword</param-name>
            <param-value>retselnhoj</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcDriver</param-name>
            <param-value>com.mysql.cj.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcURL</param-name>
            <param-value>jdbc:mysql://localhost:3310/ActiveLearningDB?useSSL=false</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>test.UserServlet</servlet-class>
        <init-param>
            <param-name>jdbcUsername</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcPassword</param-name>
            <param-value>retselnhoj</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcDriver</param-name>
            <param-value>com.mysql.cj.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcURL</param-name>
            <param-value>jdbc:mysql://localhost:3310/ActiveLearningDB?useSSL=false</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>UserDetailServlet</servlet-name>
        <servlet-class>test.UserDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/CourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDetailServlet</servlet-name>
        <url-pattern>/UserDetailServlet</url-pattern>
    </servlet-mapping>
    <!-- Listener -->
    <listener>
        <listener-class>test.ContextListener</listener-class>
    </listener>
    <!-- Context Parameters -->
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3310/ActiveLearningDB?useSSL=false</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>retselnhoj</param-value>
    </context-param>
     <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>CIPHER_ALGORITHM</param-name>
        <param-value>AES/ECB/PKCS5Padding</param-value>
    </context-param>
    <context-param>
        <param-name>ENCRYPTION_KEY</param-name>
        <param-value>0123456789abcdef</param-value>
    </context-param>
    <!-- Servlet Mapping for CaptchaServlet -->
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>test.CaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/CaptchaServlet</url-pattern>
    </servlet-mapping>
    <!-- Context Parameters for Captcha Length -->
    <context-param>
        <param-name>CAPTCHA_LENGTH</param-name>
        <param-value>1</param-value>
        <!-- Set the desired length of the CAPTCHA here -->
    </context-param>
    <!-- Your existing welcome file list, error page configuration, etc. -->
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
</web-app>
